@page "/addproduct"
@inject ProductsViewModel productsTableViewModel

@using Microsoft.AspNetCore.Components.Forms
<PageTitle>Add Product</PageTitle>

<section class="container py-5">
    <div class="row justify-content-center align-items-center min-vh-75">

        <!-- Left Hero/Info panel - hidden on small screens -->
        <div class="col-lg-5 d-none d-lg-flex flex-column justify-content-center pe-lg-5">
            <h1 class="display-4 fw-bold text-primary mb-4">Ajouter une nouveau produit</h1>
            <p class="lead mb-4">
                Remplissez le formulaire pour ajouter une marque unique à votre collection.
            </p>
        </div>

        <!-- Form card -->
        <div class="col-12 col-lg-5">
            <div class="card shadow-lg rounded-4 p-4 p-md-5 border-0">
                <h2 class="mb-4 text-center text-primary fw-bold">Ajouter un produit</h2>

                <EditForm Model="newProduct" OnValidSubmit="HandleAddProduct" class="needs-validation" novalidate>
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-4" />

                    <div class="form-floating mb-4">
                        <input id="productName" class="form-control form-control-lg" @bind="newProduct.NameProduct" placeholder="Saisissez le nom du produit" required />
                        <label for="productName">Nom du produit </label>
                    </div>
                    <div class="form-floating mb-4">
                        <input id="description" class="form-control form-control-lg" @bind="newProduct.Description" placeholder="Enter product description" required />
                        <label for="description">La description du produit</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input id="photoName" class="form-control form-control-lg" @bind="newProduct.NamePhoto" placeholder="Enter photo name" required />
                        <label for="photoName">Le nom de la photo du produit</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input id="photoUri" class="form-control form-control-lg" @bind="newProduct.UriPhoto" placeholder="Enter photo uri" required />
                        <label for="photoUri">Le lien de la photo</label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 d-flex justify-content-center align-items-center gap-2">
                        <i class="bi bi-plus-circle"></i> Ajouter le produit
                    </button>
                </EditForm>
            </div>
        </div>

    </div>
</section>

<Toasts Messages="messages" Placement="ToastsPlacement.TopRight" AutoHide="true" Delay="5000" ShowCloseButton="true" />

@code {
    private Product newProduct = new();
    private List<ToastMessage> messages = new();

    private void ShowMessage(ToastMessage toastMessage) => messages.Add(toastMessage);

    private async Task HandleAddProduct()
    {
        if (newProduct is null)
            return;
        ToastMessage toast = await productsTableViewModel.CreateProduct(newProduct);
        ShowMessage(toast);
        newProduct = new Product();
    }
}