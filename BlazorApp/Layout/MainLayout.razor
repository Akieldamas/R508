@inherits LayoutComponentBase

<div class="bb-page">

    <Sidebar @ref="sidebar"
             Title="Gestion Inventaire"
             IconName="IconName.Gem"
             DataProvider="SidebarDataProvider" />

    <main>
        <div class="bb-top-row px-4 d-flex justify-content-end">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank"> <span class="text-primary fw-bold"> About </span> </a>
        </div>

        <article class="content px-4">
            <div class="py-2">@Body</div>
        </article>
    </main>

</div>

@code {
    Sidebar sidebar;
    IEnumerable<NavItem> navItems;

    private async Task<SidebarDataProviderResult> SidebarDataProvider(SidebarDataProviderRequest request)
    {
        if (navItems is null)
            navItems = GetNavItems();

        return await Task.FromResult(request.ApplyTo(navItems));
    }

    private IEnumerable<NavItem> GetNavItems()
    {
        navItems = new List<NavItem>
        {
            new NavItem { Id = "1", Href = "/", IconName = IconName.HouseDoorFill, Text = "Home", Match=NavLinkMatch.All},
            new NavItem { Id = "3", Href = "/products", IconName = IconName.Table, Text = "Show Products"},
            new NavItem { Id = "4", Href = "/brands", IconName = IconName.Table, Text = "Show Brands"},
            new NavItem { Id = "5", Href = "/producttypes", IconName = IconName.Table, Text = "Show ProductTypes"},
            new NavItem { Id = "6", Href = "/addproduct", IconName = IconName.PlusSquareFill, Text = "Add Products"},
            new NavItem { Id = "7", Href = "/addbrand", IconName = IconName.PlusSquareFill, Text = "Add Brand"},
            new NavItem { Id = "8", Href = "/addproducttype", IconName = IconName.PlusSquareFill, Text = "Add ProductType"},
        };

        return navItems;
    }
}